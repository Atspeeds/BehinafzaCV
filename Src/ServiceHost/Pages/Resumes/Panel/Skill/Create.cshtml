@model PersonalInformationManagement.Application.Contract.ResumeCon.ViewModel.Request.Skill_Add_Request



<div class="modal-header" style="direction:initial">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">افزودن مهارت جدید</h4>
</div>

<form asp-page="Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <label class="control-label">مهارت</label>
                <input asp-for="SkillName" placeholder="مهارت خود را وارد کنید" type="text" class="form-control">

            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label class="control-label">میزان مهارت</label>
                <select asp-for="Score" class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                    <option selected>انتخاب کنید...</option>
                    <option value="1">آشنا</option>
                    <option value="2">خوب</option>
                    <option value="3">حرفه ای</option>
                </select>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">افزودن</button>
    </div>
</form>

