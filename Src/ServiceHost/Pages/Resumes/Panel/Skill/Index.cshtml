@page "{id}"
@model ServiceHost.Pages.Resumes.Panel.Skill.IndexModel
@{
    ViewData["PanelTitle"] = "مهارت ها";
}
<div class="page-header">
    <div>
        <h2 class="main-content-title tx-24 mg-b-5">@ViewData["PanelTitle"]</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">خانه</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["PanelTitle"]</li>
        </ol>
    </div>
    <div class="d-flex">
        <div class="justify-content-center">
            <!-- Button trigger modal -->
            <a href="#showmodal=@Url.Page("Index", "Create")" class="btn btn-white btn-icon-text my-2 ml-2">
                افزودن مهارت<i class="fe fe-download mr-2"></i>
            </a>
            <button type="button" class="btn btn-white btn-icon-text my-2 ml-2">
                فیلتر<i class="fe fe-filter ml-2"></i>
            </button>
            <button type="button" class="btn btn-primary my-2 btn-icon-text">
                گزارش را بارگیری کنید<i class="fe fe-download-cloud mr-2"></i>
            </button>
        </div>
    </div>
</div>

<div class="row row-sm" data-select2-id="34">
    <div class="col-lg-12 col-md-12" data-select2-id="33">
        <div class="card custom-card" data-select2-id="32">
            <div class="card-body" data-select2-id="31">
                <div>
                    <h6 class="main-content-label mb-1">مهارت های شما</h6>
                    <p class="text-muted card-sub-title">در اینجا میتوانید مهارت های خود را ببینید و مهارت جدید ثبت کنید.</p>
                </div>

                <div class="row row-sm" data-select2-id="30">


                    <div class="col-lg-12 mg-t-20 mg-lg-t-0">
                        <div class="selectgroup selectgroup-pills">
                            @foreach (var skill in Model.Skills)
                            {
                                <label class="selectgroup-item ">
                                    <input type="checkbox" name="value" value="HTML" class="selectgroup-input" checked="">
                                    <span class="selectgroup-button">@skill.SkillName
                                        @for (int i = 0; i < skill.Score; i++)
                                        {
                                            <span style="color:darkgoldenrod" class="fa fa-star checked"></span>
                                        }
                                    </span>
                                    
                                </label>

                           }


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>