@model PersonalInformationManagement.Application.Contract.EducationCon.Education_Edit_Request


<div class="modal-header" style="direction:initial">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش مدرک تحصیلی: @Model.Institution</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <label class="control-label">نوع مدرک تحصیلی</label>
                <input asp-for="Degree" placeholder="نوع مدرک تحصیلی خود را وارد کنید" type="text" class="form-control">

            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <label class="control-label">نام موسسه</label>
                <input asp-for="Institution" placeholder="نام موسسه ای که مشغول به تحصیل بودید را وارد کنید" type="text" class="form-control">
            </div>
        </div>
        <br />
        <br />
        <div class="row">
            <div class="col-lg-6">
                <div class="mg-b-20">
                    <div class="input-group">

                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fe fe-calendar lh--9 op-6"></i>
                            </div>
                        </div>

                        <input asp-for="StartDate" class="form-control fc-datepicker hasDatepicker" placeholder="تاریخ شروع تحصیل" type="date" id="datepickerNoOfMonths">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mg-b-20">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fe fe-calendar lh--9 op-6"></i>
                            </div>
                        </div>

                        <input asp-for="EndDate" class="form-control hasDatepicker" id="datepickerNoOfMonths" placeholder="تاریخ پایان تحصیل" type="date">
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" asp-for="Id" value="@Model.Id" />
    </div>
    <div class="modal-footer">
        <div class="modal-footer">
            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
            <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
        </div>
    </div>
</form>

