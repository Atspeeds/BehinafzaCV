@page
@model ServiceHost.Pages.Resumes.Resume.IndexModel
@{
    Layout = "_AccountLayout";
    ViewData["AccountTitle"] = "رزومه های من";
}
<div class="page main-signin-wrapper bg-primary construction">

    <div class="container ">
        <nav class="breadcrumb-5">
            <div class="breadcrumb flat">
                <a href="https://localhost:44330">صفحه اصلی</a>
                <a href="#" class="active">@ViewData["AccountTitle"]</a>
            </div>
        </nav>
        <div class="construction1 text-center details text-white">
            <div class="row align-items-center">
                <div class="row col-12" style="margin-top:60px">
                    <div class="col-lg-4 col-sm-4">
                        <div class="card custom-card" id="loaders3">
                            <div class="card-body">
                                <div>
                                    <h6 class="main-content-label mb-1">همراه تو </h6>
                                    <p class="text-muted card-sub-title">تا لحظه استخدام کنارتیم</p>
                                </div>
                                <div class="text-center">
                                    <div class="lds-heart"><div></div></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-4">
                        <div class="card custom-card" id="loaders4">
                            <div class="card-body">
                                <div>
                                    <h6 class="main-content-label mb-1">در هر نقطه</h6>
                                    <p class="text-muted card-sub-title">در هر نقطه میتونی مهارتتو ثبت کنی</p>
                                </div>
                                <div class="text-center">
                                    <div class="lds-ripple"><div></div><div></div></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-4">
                        <div class="card custom-card" id="loaders5">
                            <div class="card-body">
                                <div>
                                    <h6 class="main-content-label mb-1">پردازش توسط سیستم</h6>
                                    <p class="text-muted card-sub-title">ما رزومه شمارو برسی و مفید ارائه میدیم</p>
                                </div>
                                <div class="text-center">
                                    <div class="lds-spinner"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @if (Model.Resumes.Count == 0)
                {
                    <div class="col-lg-12 ">
                        <div class="alert alert-primary" role="alert">
                            <button aria-label="Close" class="close" data-dismiss="alert" type="button">
                                <span aria-hidden="true">×</span>
                            </button>
                            <strong>@User.Identity.Name!</strong> عزیر رزومه ای برای شما ایجاد نشده از طریق دکمه ایجاد رزومه خود را بسازید.
                        </div>
                    </div>
                }
                else
                {
                    <div class="row row-sm col-12">
                        <div class="col-sm-12 col-md-12 col-xl-12">
                            <div class="card custom-card overflow-hidden">
                                <div class="">
                                    <div class="main-content-app main-content-contacts pt-0">
                                        <div class="card main-content-left main-content-left-contacts">
                                            <div class="tab-menu-heading">
                                                <div class="tabs-menu1 ">
                                                    <!-- Tabs -->
                                                    <ul class="nav panel-tabs main-nav-line main-nav-line-chat d-flex pr-3 ">
                                                        <li><a href="#all-contact" class="nav-link ml-3 active" data-toggle="tab">رزومه های شما</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="panel-body tabs-menu-body p-0">
                                                <div class="tab-content">
                                                    <div class="tab-pane active" id="all-contact">
                                                        <div class="main-contacts-list ps ps--active-y" id="mainContactList">
                                                            @foreach (var resume in Model.Resumes)
                                                            {

                                                                <a href="Panel/Skill/@resume.Id" class="main-contact-item">
                                                                    <div><img src="/assets/img/pngs/14.png" alt="" class="ht-40 wd-40 ml-3"></div>
                                                                    <div class="main-contact-body">
                                                                        <h6>@resume.Summary</h6><span>@resume.DateCreation</span>
                                                                    </div>
                                                                    <div class="main-contact-star" href="">
                                                                        <i class="fe fe-star mr-1"></i>
                                                                        <i class="fe fe-edit-2 mr-1"></i>
                                                                        <i class="fe fe-more-vertical"></i>
                                                                    </div>
                                                                </a>

                                                            }

                                                            <div class="ps__rail-x" style="left: 0px; top: 0px;"><div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div></div><div class="ps__rail-y" style="top: 0px; height: 800px; right: 3px;"><div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 668px;"></div></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                }
                <a style="text-align:center;margin-top:20px" href="#showmodal=@Url.Page("Index", "Create")" class="btn btn-white btn-icon-text my-2 ml-2 btn-lg">
                    ساخت رزومه جدید<i class="fe fe-download mr-2"></i>
                </a>
            </div>
        </div>
    </div>

</div>