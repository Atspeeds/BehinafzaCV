@page
@model ServiceHost.Pages.Resumes.Resume.IndexModel
@{
    Layout = "_AccountLayout";
    ViewData["AccountTitle"] = "رزومه های من";
}
<div class="page main-signin-wrapper bg-primary construction">

    <div class="container ">
        <nav class="breadcrumb-5">
            <div class="breadcrumb flat">
                <a href="https://localhost:44330">صفحه اصلی</a>
                <a href="#" class="active">@ViewData["AccountTitle"]</a>
            </div>
        </nav>
        <div class="construction1 text-center details text-white">
            <div class="row align-items-center">
                @if (Model.Resumes.Count == 0)
                {
                    <div class="col-lg-12 " style="margin-top:60px">
                        <div class="alert alert-primary" role="alert">
                            <button aria-label="Close" class="close" data-dismiss="alert" type="button">
                                <span aria-hidden="true">×</span>
                            </button>
                            <strong>@User.Identity.Name!</strong> عزیر رزومه ای برای شما ایجاد نشده از طریق دکمه ایجاد رزومه خود را بسازید.
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-lg-12">
                        <div class="card custom-card mg-b-20">
                            <div class="card-body">
                                <div class="card-header border-bottom-0 pt-0 pl-0 pr-0 d-flex">
                                    <div>
                                        <span class="d-block tx-12 mb-3 text-muted">میتوانید رزومه های خود را مشاهده کنید از طریق دکمه های عملیات و عملیات دلخواه خود را انجام دهید.</span>
                                    </div>
                                </div>
                                <div class="table-responsive tasks">
                                    <table class="table card-table table-vcenter text-nowrap mb-0  border">
                                        <thead>
                                            <tr>
                                                <th class="wd-lg-10p">موضوع</th>
                                                <th class="wd-lg-20p">تاریخ ایجاد</th>
                                                <th class="wd-lg-20p">عملیات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var resume in Model.Resumes)
                                            {
                                                <tr>
                                                    <td class="font-weight-semibold d-flex">
                                                        <span class="mt-1">@resume.Summary</span>
                                                    </td>


                                                    <td class="text-primary">@resume.DateCreation</td>
                                                    <td>
                                                        <a href="Panel/@resume.Id" class="btn ripple btn-info btn-sm">مشاهده</a>
                                                        <a href="#showmodal=@Url.Page("./Index", "Edit",new {id = resume.Id,resumeId = resume.Id})" class="btn ripple btn-warning btn-sm">ویرایش</a>
                                                        <a href="#showmodal=@Url.Page("./Index", "Edit")" class="btn ripple btn-danger btn-sm">حذف</a>

                                                    </td>
                                                </tr>

                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                }
                <a style="text-align:center;margin-top:20px" href="#showmodal=@Url.Page("Index", "Create")" class="btn btn-white btn-icon-text my-2 ml-2 btn-lg">
                    ساخت رزومه جدید<i class="fe fe-download mr-2"></i>
                </a>
            </div>
        </div>
    </div>

</div>